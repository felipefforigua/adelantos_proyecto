<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivVolver"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="255dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_volver" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="@string/tvTitle"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Primer Nombre" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tvNombre"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:hint="Ingrese su primer nombre" />

        <TextView
            android:id="@+id/tvApellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNombre"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Primer Apellido" />

        <EditText
            android:id="@+id/etApellido"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/tvApellido"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:hint="Ingrese su primer apellido" />

        <TextView
            android:id="@+id/tvCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etApellido"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Correo electrónico" />

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/tvCorreo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:hint="Ingrese su correo electrónico"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/tvContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etCorreo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Contraseña" />

        <EditText
            android:id="@+id/etContrasena"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/tvContrasena"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:hint="Ingrese su contraseña"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvConfimarContrasena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etContrasena"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Confirmar Contraseña" />

        <EditText
            android:id="@+id/etConfimarContrasena"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/tvConfimarContrasena"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:hint="Ingrese su contraseña"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/cbCondiciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etConfimarContrasena"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Acepto los términos y condiciones" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@id/cbCondiciones"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:padding="5dp"
            android:text="@string/btnLogin"
            android:textSize="25dp" />

    </LinearLayout>
</RelativeLayout>
